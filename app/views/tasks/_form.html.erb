<%= form_with model: [ category, task ] do |form| %>
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% task.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>
    <p>
        <%= form.label :notes %><br>
        <%= form.text_area :notes %>
        <% task.errors.full_messages_for(:notes).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>
    <p>
        <%= form.label :date %><br>
        <%= form.date_select :date %>
    </p>
    <p>
        <%= form.check_box :complete %>
        <%= form.label :complete, "Completed?" %><br>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>