<p>
    <strong>Task</strong>
    <%= task.name %>
</p>

<p>
    <strong>Notes</strong>
    <%= task.notes %>
</p>

<p>
    <strong>Date</strong>
    <%= task.date %>
</p>

<p>
    <strong>Completed?</strong>
    <%= task.complete %>
</p>

<p>
    <%= link_to "Expand", category_task_path(@category, task.id) %>
    <%= link_to "Edit task", edit_category_task_path(@category, task.id) %>
    <%=
        link_to 'Delete task',
            [task.category, task],
            method: :delete,
            data: { confirm: "Are you sure?" }
    %>
</p>